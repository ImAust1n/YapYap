{
  "manifest_version": 3,
  "name": "YapYap Chrome Extension",
  "version": "1.0",
  "description": "Browser-based realtime speech-to-text using YapYap backend.",
  "permissions": ["microphone", "storage"],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
